@{
  ViewData["Title"] = "Log in";
}

<h2>@ViewData["Title"].</h2>
<form id="login_form" action="/login" method="post" class="form-horizontal" role="form">
  <h4>Use a local account to log in.</h4>
  <hr />
  <div class="form-group">
    <div class="col-md-10">
      <label class="control-label sr-only">Email address or phone number</label>
      <input type="text" name="login" class="form-control" placeholder="Email address or phone number" />
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-10">
      <label class="control-label sr-only">Password</label>
      <input type="password" name="password" class="form-control" placeholder="Password" />
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-10">
      <button type="submit" class="btn btn-default">Log in</button>
    </div>
  </div>
</form>


@section Scripts {
  @*
    NOTE: this is a terrible way to do client script.
    TODO: replace cshtml & viewcontrollers with redux/react spa.
  *@
  <script>
    $(document).on('ready', function () {
      $('#register_form').find('[name=login]').focus();
    });
  </script>
}